<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="BtnRed">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.50</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/akrobat_bold</item>
        <item name="android:layout_marginTop">@dimen/mrg_16</item>
    </style>

    <style name="TvTitle">
        <item name="android:fontFamily">@font/akrobat_bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.8</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tv_title</item>
    </style>
    <style name="ImgFish">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.60</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_marginTop">@dimen/mrg_48</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="BtnRedSmall">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_height_small</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.30</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/akrobat_bold</item>

    </style>
</resources>
